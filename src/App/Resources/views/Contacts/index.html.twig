{% extends 'App::layout.html.twig' %}

{% block subtitle 'contacts_index.title'|trans %}

{% block content %}
    <div class="row">
        <div class="span12">
            <div class="page-header header-two">
                <h1 class="bg_contact">{{ 'contacts_index.title'|trans }}</h1>
                <div class="txtR">
                    <a class="btn btn-medium btn-primary" href="{{ path('app_contacts_new') }}">{{ 'contacts_index.link_add'|trans }}</a>
                </div>
            </div>

            <div class="custom-dataTable">
                <table class="table table-striped table-bordered display" id="contact-list-table">
                    <thead>
                    <tr>
                        <th><span>{{ 'contacts_index.table.first_name'|trans }}</span></th>
                        <th><span>{{ 'contacts_index.table.last_name'|trans }}</span></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.firstName }}</td>
                            <td>{{ contact.lastName }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock content %}